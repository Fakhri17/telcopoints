
{% set data = {
  serviceList: [],
}|merge(data ?? {}) %}

<div class="row g-5">
	{% for key, item in data.serviceList %}
		<div class="col-lg-4 col-md-6 d-flex align-items-stretch">
			<div class="card rounded-5 animate__animated animate__fadeIn animate__delay-{{ key + 1 }}s">
				<div class="card-body bg-colors text-white py-5 px-4 rounded-5">
					<div class="card-title h3 text-white text-center fw-bold">{{ item.title }}</div>
					<div class="card-text text-white mb-4 ">{{ item.serviceSubtitle }}</div>
					<div class="text-center">
						<a href="{{ url('/services/' ~ item.slug ) }}" class="btn btn-outline-light">Lihat Detail</a>
					</div>
				</div>
			</div>
			{# <div class="py-5 px-3 bg-colors rounded-5 d-flex flex-column align-items-center justify-content-center">
				<h3 class="mb-3 text-white text-center">{{ item.title }}</h3>
				<p class="text-white mb-4">{{ item.serviceSubtitle }}</p>
				<a href="{{ url('/services/' ~ item.slug ) }}" class="btn btn-outline-light">Lihat Detail</a>
			</div> #}
		</div>
	{% endfor %}
</div>
