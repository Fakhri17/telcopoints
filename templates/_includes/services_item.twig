
{% set data = {
  serviceList: [],
}|merge(data ?? {}) %}
{# data-aos-delay="{{ key + 2 }}000" #}
<div class="row overflow-hidden justify-content-center">
	{% for key, item in data.serviceList %}
		<div class="col-lg-4 col-md-6 mb-4 d-flex justify-content-center" data-aos="fade-up" data-aos-easing="ease-in-out" data-aos-once="true" data-aos-duration="{{ 500 + ((key + 1) * 100) }}" >
			<div class="bg-colors circle-service p-2">
				<div>
					<h4 class="text-white text-center">{{ item.title }}</h4>
					<p class="text-white mb-4">{{ item.serviceSubtitle }}</p>
					<div class="text-center text-black">
						<a href="{{ url('/services/' ~ item.slug ) }}" class="text-black btn btn-outline-light btn-detail" style="btn-detail">Lihat Detail</a>
					</div>
				</div>
				
			</div>
			{# <div class="py-5 px-3 bg-colors rounded-5 d-flex flex-column align-items-center justify-content-center">
				<h3 class="mb-3 text-white text-center">{{ item.title }}</h3>
				<p class="text-white mb-4">{{ item.serviceSubtitle }}</p>
				<a href="{{ url('/services/' ~ item.slug ) }}" class="btn btn-outline-light">Lihat Detail</a>
			</div> #}
		</div>
	{% endfor %}
</div>
